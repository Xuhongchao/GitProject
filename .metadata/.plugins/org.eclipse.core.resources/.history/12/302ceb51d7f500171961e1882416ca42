package com.wisetrust.jsonproject;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.Map;
import org.json.JSONArray;
import org.json.JSONObject;

/**
 * Created by @author xu on @date 2018年 1月 10日 下午1:30:55
 */
public class JsonHandle {
	/**
	 * 根据省代码进行归类
	 * 
	 * @return Map<String, ArrayList<JSONObject>>
	 */
	public Map<String, ArrayList<JSONObject>> classify() {
		String mes = IOUtils.ReadFile("C:\\Users\\xu\\Desktop\\address.json");
		JSONObject dataJson = new JSONObject(mes);
		JSONArray arr = dataJson.getJSONArray("data");

		Map<String, ArrayList<JSONObject>> map = new HashMap<>();

		for (int i = 0; i < arr.length(); i++) {
			JSONObject addr = arr.getJSONObject(i);
			String provinceCode = addr.getString("provinceCode");

			if (provinceCode != null) {
				if (map.containsKey(provinceCode)) {
					map.get(provinceCode).add(addr);
				} else {
					map.put(provinceCode, new ArrayList<>());
					map.get(provinceCode).add(addr);
				}
			}
		}
		return map;
	}
	
	
	
}
