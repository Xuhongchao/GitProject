package com.wisetrust.jsonproject;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.Map;
import java.util.Map.Entry;

import org.json.JSONArray;
import org.json.JSONObject;

/**
 * Created by @author xu on @date 2018年 1月 10日 下午1:30:55
 */
public class JsonHandle {
	public static void main(String[] args) {
		String mes = IOUtils.ReadFile("C:\\Users\\xu\\Desktop\\address.json");
		JSONObject dataJson = new JSONObject(mes);
		JSONArray arr = dataJson.getJSONArray("data");

		Map<String, ArrayList<JSONObject>> map = new HashMap<>();

		for (int i = 0; i < arr.length(); i++) {
			JSONObject addr = arr.getJSONObject(i);
			String provinceCode = addr.getString("provinceCode");

			// String provinceName = addr.getString("provinceName");
			// String cityCode = addr.getString("cityCode");
			// String cityName = addr.getString("cityName");
			// String areaCode = addr.getString("areaCode");
			// String areaName = addr.getString("areaName");
			// System.out.println(provinceCode);
			// System.out.println(provinceName);
			// System.out.println(cityCode);
			// System.out.println(cityName);
			// System.out.println(areaCode);
			// System.out.println(areaName);

			if (provinceCode != null) {
				if (map.containsKey(provinceCode)) {
					map.get(provinceCode).add(addr);
				} else {
					map.put(provinceCode, new ArrayList<>());
					map.get(provinceCode).add(addr);
				}
			}
		}
		System.out.println(map.size());
		for(Entry<K, V> entry : map.entrySet()){
			System.out.println();
		}
	}
}
