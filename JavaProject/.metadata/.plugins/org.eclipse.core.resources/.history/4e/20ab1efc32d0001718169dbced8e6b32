package com.pxene.entrance;

import java.io.File;

import com.pxene.util.IOUtil;

/**
 * Created by @author xuhongchao on @date 2017年 月 日 下午4:04:13
 */

public class Entrance2 {
	private static final String filePath = "C:\\Users\\xuhongchao\\Desktop\\res";
	private static IOUtil ioUtil = IOUtil.getInstance();

	public static void main(String[] args) {
		File file = new File(filePath);
		File[] files = null;
		if (file.isDirectory()) {
			files = file.listFiles();
		}

		for (int i = 0; i < 1; i++) {
			String numStr = ioUtil.readFromTxt(files[i]);
			// 处理逻辑
			String[] nums = numStr.split("-");
			String[] temp = new String[nums.length];
			for (int j = 0; i < nums.length; j++) {
				temp[j] = nums[i].substring(8, 11);
			}

			boolean flag = false;
			for (int k = 0; k <= temp.length - 2; k++) {
				temp[k].equals(temp[k + 1]);

				}
			}

		}

	}
}
