package day1;

/**
 * Created by @author xu on @date 2018年 月 日 下午10:40:02 </br>
 * 冒泡排序 </br>
 */
public class BubblingSort {

	public static void main(String[] args) {
		int[] arr = { 2, 1, 4, 3, 6, 7, 5 };
		BubblingSort(arr);
	}

	public Integer[] bubblingSort(Integer[] arr) {
		if (arr == null) {
			return null;
		}
		if (arr.length == 1) {
			return arr;
		}

		// 排序
		for (int i = arr.length - 1; i > 0; i--) {
			for (int j = 0; j < i; j++) {
				if (arr[j] < arr[j + 1]) {
					swap(arr[j], arr[j + 1]); // 交换
				}
			}
		}
		return arr;
	}

	private void swap(Integer a1, Integer a2) {
		int temp = a1;
		a1 = a2;
		a2 = temp;
	}

}
