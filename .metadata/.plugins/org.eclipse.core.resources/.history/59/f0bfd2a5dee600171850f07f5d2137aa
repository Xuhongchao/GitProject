<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.com.wisetrust.dao.IAccount">

	<select id="getAccountList" resultType="Account">
		SELECT * FROM ACCOUNT
	</select>

	<insert id="addAcount" parameterType="Account">
		INSERT
		INTO
		ACCOUNT(LOGIN_NAME,CELLPHONE,PASSWORD,SALT,TYPE,POS,STATUS,LAST_LOGIN_TIME,GMT_CREATE,GMT_MODIFIED,OPEN_ID)
		VALUES(#{login_name},#{cellphone},#{password},#{salt},#{type},#{pos},#{status},#{last_login_time},#{gmt_create},#{gmt_modified},#{open_id});
	</insert>

	<update id="updateAccount" parameterType="Account">
		UPDATE
		ACCOUNT
		SET
		LOGIN_NAME=#{login_name},
		CELLPHONE=#{cellphone},
		PASSWORD=#{password},
		SALT=#{salt},
		TYPE=#{type},
		POS=#{pos},
		STATUS=#{status},
		LAST_LOGIN_TIME=#{last_login_time},
		GMT_CREATE=#{gmt_create},
		GMT_MODIFIED=#{gmt_modified},
		OPEN_ID=#{open_id}
		WHERE
		ID = #{id}
	</update>
	
	<delete id="deleteAccount" parameterType="int">
		DELETE FROM ACCOUNT WHERE ID = #{ID}
	</delete>

	<select id="getAccountByID" parameterType="int" resultType="Account">
		SELECT * FROM ACCOUNT WHERE ID = #{ID}
	</select>
</mapper>